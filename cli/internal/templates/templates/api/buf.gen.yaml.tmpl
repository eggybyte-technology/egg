version: v1
plugins:
  # Generate Go code (Protobuf messages and Connect client/server)
  - plugin: buf.build/protocolbuffers/go
    out: ../gen/go
    opt: paths=source_relative
  - plugin: buf.build/connectrpc/go
    out: ../gen/go
    opt: paths=source_relative
  
  # Generate Dart code (Protobuf messages and Connect client/server)
  - plugin: buf.build/protocolbuffers/dart
    out: ../gen/dart
  - plugin: buf.build/connectrpc/dart
    out: ../gen/dart
  
  # Generate OpenAPI/Swagger documentation
  - plugin: buf.build/grpc-ecosystem/openapiv2
    out: ../gen/openapi
