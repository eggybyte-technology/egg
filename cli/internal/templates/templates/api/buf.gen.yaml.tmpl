version: v2

plugins:
  # Go (protobuf + Connect)
  - local: protoc-gen-go
    out: ../gen/go
    opt:
      - paths=source_relative
  - local: protoc-gen-connect-go
    out: ../gen/go
    opt:
      - paths=source_relative

  # Dart (protobuf + gRPC)
  - local: protoc-gen-dart
    out: ../gen/dart
    opt:
      - grpc

  # OpenAPI v2
  - local: protoc-gen-openapiv2
    out: ../gen/openapi
